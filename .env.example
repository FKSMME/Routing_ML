# Routing ML v4 - Environment Variables Example
# 이 파일을 .env로 복사하고 실제 값을 입력하세요

# ============================================================================
# Database Configuration
# ============================================================================

# Database Type (MSSQL or ACCESS)
DB_TYPE=MSSQL

# MSSQL Configuration
MSSQL_SERVER=K3-DB.ksm.co.kr,1433
MSSQL_DATABASE=KsmErp
MSSQL_USER=FKSM_BI
MSSQL_PASSWORD=your_password_here
MSSQL_ENCRYPT=False
MSSQL_TRUST_CERTIFICATE=True

# Access Database (if using ACCESS)
ACCESS_DIR=/app/data/db

# ============================================================================
# API Configuration
# ============================================================================

# API URL for Frontend
VITE_API_URL=http://localhost:8000

# API Version
API_VERSION=4.0.0

# ============================================================================
# Security
# ============================================================================

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ============================================================================
# Model Paths
# ============================================================================

# Model Directory
MODEL_DIR=./models

# Anomaly Detection Model
ANOMALY_MODEL_PATH=./models/anomaly_detection/isolation_forest.pkl

# Drift Detection Model
DRIFT_MODEL_PATH=./models/drift_detection/drift_detector.pkl

# ============================================================================
# Logging
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=./logs

# ============================================================================
# Performance
# ============================================================================

# Number of Workers (uvicorn)
WEB_CONCURRENCY=4

# Number of Threads (scikit-learn, NumPy)
OPENBLAS_NUM_THREADS=8
MKL_NUM_THREADS=8

# ============================================================================
# Feature Flags
# ============================================================================

# Enable Anomaly Detection
ENABLE_ANOMALY_DETECTION=true

# Enable Drift Detection
ENABLE_DRIFT_DETECTION=true

# Enable Weekly Reports
ENABLE_WEEKLY_REPORTS=false

# ============================================================================
# Docker Configuration
# ============================================================================

# Container Timezone
TZ=Asia/Seoul

# ============================================================================
# Development
# ============================================================================

# Development Mode
DEV_MODE=false

# Auto Reload (for development)
RELOAD=false
