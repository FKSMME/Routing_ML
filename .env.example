# ============================================
# Email Notification Settings (MS365 Outlook)
# ============================================

# 이메일 알림 기능 사용 여부
EMAIL_ENABLED=true

# MS365 Outlook SMTP 서버 정보
EMAIL_SMTP_SERVER=smtp.office365.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true

# 발신자 이메일 주소 (귀하의 MS365 이메일)
EMAIL_SENDER=your-email@company.com

# 이메일 계정 비밀번호 또는 앱 비밀번호
# 보안을 위해 MS365 앱 비밀번호 사용 권장
EMAIL_PASSWORD=your-password-here

# 관리자 이메일 주소 (회원가입 알림 받을 주소)
EMAIL_ADMIN=admin@company.com

# ============================================
# Core Database URLs (PostgreSQL)
# ============================================

# PostgreSQL 15+ with psycopg driver is required for SQLAlchemy 2.x
# Replace placeholder credentials with environment-specific secrets
RSL_DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/routing_ml
ROUTING_GROUPS_DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/routing_ml
MODEL_REGISTRY_URL=postgresql+psycopg://postgres:postgres@localhost:5432/routing_ml

# ERP/Legacy MSSQL settings (still required for read-only data pulls)
DB_TYPE=MSSQL
MSSQL_SERVER=K3-DB.ksm.co.kr,1433
MSSQL_DATABASE=KsmErp
MSSQL_USER=FKSM_BI
MSSQL_PASSWORD=changeme
MSSQL_ENCRYPT=True
MSSQL_TRUST_CERTIFICATE=True
MSSQL_ITEM_VIEW=dbo_BI_ITEM_INFO_VIEW
MSSQL_ROUTING_VIEW=dbo_BI_ROUTING_VIEW
MSSQL_WORK_RESULT_VIEW=dbo_BI_WORK_ORDER_RESULTS
MSSQL_PURCHASE_ORDER_VIEW=dbo_BI_PO_VIEW
