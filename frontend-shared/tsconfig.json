{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@routing-ml/shared": ["src/index.ts"],
      "@routing-ml/shared/*": ["src/*"],
      "@components/*": ["../frontend-prediction/src/components/*"],
      "@lib/*": ["../frontend-prediction/src/lib/*"],
      "@app-types/*": ["../frontend-prediction/src/types/*"],
      "reactflow": ["../frontend-prediction/node_modules/reactflow"],
      "reactflow/*": ["../frontend-prediction/node_modules/reactflow/*"]
    },
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
