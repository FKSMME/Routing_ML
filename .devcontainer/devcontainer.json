// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
	"name": "Anaconda (Python 3)",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/git-lfs:1": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/flexwie/devcontainer-features/op:1": {},
		"ghcr.io/devcontainers-community/npm-features/typescript:1": {},
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {},
		"ghcr.io/devcontainers-extra/features/typescript:2": {},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"Anthropic.claude-code",
				"ms-azuretools.vscode-containers"
			]
		}
	},
	"containerEnv": {
		"NODE_EXTRA_CA_CERTS": "/usr/local/share/ca-certificates/ksm-chain.crt"
	},
	"postCreateCommand": "sudo mkdir -p /usr/local/share/ca-certificates && sudo cp /workspaces/Routing_ML_4/certs/ksm-root.pem /usr/local/share/ca-certificates/ksm-root.crt && sudo cp /workspaces/Routing_ML_4/certs/ksm-intermediate.pem /usr/local/share/ca-certificates/ksm-intermediate.crt && sudo cp /workspaces/Routing_ML_4/certs/corp-chain.pem /usr/local/share/ca-certificates/ksm-chain.crt && sudo update-ca-certificates",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000, 5173, 5174, 8000],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
